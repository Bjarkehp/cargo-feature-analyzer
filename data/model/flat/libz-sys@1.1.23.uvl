features
    "libz-sys"
        optional
            "libc"
                optional
                    "zlib-ng-no-cmake-experimental-community-maintained"
                    "zlib-ng"
                    "default"
            "stock-zlib"
            "static"
            "asm"
constraints
    "default" => "stock-zlib" & "libz-sys"
    "zlib-ng" => "libz-sys"
    "zlib-ng-no-cmake-experimental-community-maintained" => "libz-sys"
