features
    "libc"
        optional
            "rustc-std-workspace-core"
                optional
                    "rustc-dep-of-std"
            "use_std"
            "std"
                optional
                    "default"
            "extra_traits"
            "const-extern-fn"
            "align"
constraints
    "use_std" => "std"
    "rustc-dep-of-std" => "libc" & "align"
    "default" => "libc"
