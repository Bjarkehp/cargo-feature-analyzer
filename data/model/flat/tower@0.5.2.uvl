features
    "tower"
        optional
            "default"
            "tracing"
                optional
                    "spawn-ready"
                        optional
                            "full"
                    "reconnect"
                    "ready-cache"
                        optional
                            "balance"
                    "log"
                    "load"
                    "limit"
                    "hedge"
                    "buffer"
            "tokio-util"
            "tokio-stream"
            "tokio"
                optional
                    "timeout"
                    "retry"
                    "make"
            "sync_wrapper"
                optional
                    "util"
            "slab"
            "pin-project-lite"
                optional
                    "__common"
                        optional
                            "load-shed"
                            "filter"
                            "discover"
            "indexmap"
            "hdrhistogram"
            "futures-util"
            "futures-core"
            "steer"
constraints
    "log" => "tower"
    "limit" => "tokio-util" & "tokio" & "__common" & "tower"
    "hedge" => "tokio" & "util" & "filter" & "hdrhistogram" & "futures-util" & "tower"
    "filter" => "futures-util" & "tower"
    "full" => "reconnect" & "ready-cache" & "balance" & "load" & "limit" & "hedge" & "buffer" & "timeout" & "retry" & "make" & "util" & "load-shed" & "filter" & "discover" & "steer" & "tower"
    "buffer" => "tokio-util" & "tokio" & "__common" & "tower"
    "load-shed" => "tower"
    "discover" => "tower"
    "spawn-ready" => "tokio" & "util" & "__common" & "futures-util" & "tower"
    "retry" => "util" & "__common" & "tower"
    "util" => "pin-project-lite" & "__common" & "futures-util" & "tower"
    "load" => "tokio" & "__common" & "tower"
    "balance" => "load" & "make" & "util" & "slab" & "discover" & "tower"
    "reconnect" => "tokio" & "make" & "tower"
    "ready-cache" => "tokio" & "pin-project-lite" & "indexmap" & "futures-util" & "futures-core" & "tower"
    "make" => "pin-project-lite" & "futures-util" & "tower"
    "__common" => "futures-core" & "tower"
    "timeout" => "pin-project-lite" & "tower"
