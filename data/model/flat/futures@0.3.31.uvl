features
    "futures"
        optional
            "futures-executor"
                optional
                    "thread-pool"
                    "executor"
                        optional
                            "default"
            "write-all-vectored"
            "unstable"
            "std"
                optional
                    "compat"
                        optional
                            "io-compat"
            "cfg-target-has-atomic"
            "bilock"
            "async-await"
            "alloc"
constraints
    "default" => "std" & "futures" & "async-await"
    "thread-pool" => "executor" & "futures"
    "io-compat" => "futures"
    "compat" => "futures"
    "std" => "alloc"
    "executor" => "std" & "futures"
