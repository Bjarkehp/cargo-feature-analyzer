features
	"regex-syntax"
		optional
			"std"
				optional
					"default"
			"unicode"
				mandatory
					"unicode-age"
					"unicode-bool"
					"unicode-case"
					"unicode-gencat"
					"unicode-perl"
					"unicode-script"
					"unicode-segment"
