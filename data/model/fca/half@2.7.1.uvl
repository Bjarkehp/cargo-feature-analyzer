features
	"half"
		optional
			"num-traits"
				optional
					"rand"
						mandatory
							"rand_distr"
			"alloc"
				or
					"bytemuck"
					"serde"
					"std"
						optional
							"default"
		optional // Unused features
			"arbitrary"
			"nightly"
			"rkyv"
			"use-intrinsics"
			"zerocopy"
constraints
	"bytemuck" => !"rand"
	"default" => !"rand"
	"rand" => !"bytemuck" & !"default" & !"serde"
	"serde" => !"rand"
