features
	"ahash"
		optional
			"std"
				optional
					"no-rng"
					"default"
						optional
							"serde"
			"compile-time-rng"
				mandatory
					"const-random"
			"getrandom"
				mandatory
					"runtime-rng"
		optional // Unused features
			"atomic-polyfill"
			"nightly-arm-aes"
			"portable-atomic"
constraints
	"compile-time-rng" => !"no-rng" & !"serde"
	"default" => "getrandom" & "runtime-rng"
	"no-rng" => !"compile-time-rng" & !"serde"
	"serde" => !"compile-time-rng" & !"no-rng"
